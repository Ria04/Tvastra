

<html>
    <head>
        <link rel="stylesheet" href="reset.css">
        <link rel="stylesheet" href="theme.css">
        <link rel="stylesheet" href="style.css">
        <link rel="stylesheet" href="myappointments.css">
    
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            #appointment{
                color:rgb(22, 125, 221);
                font-family: BoldFont;
    
            }
        </style>
    </head>
    <body>
        
    
        <%-include('header.ejs') %>
    
    
       
    
    <section class="appointments">
        <div class="dashboard" >
            <h1>Dashboard</h1>
            <ul>
               <a href="/admindashboard"> <li>
                    <i class="fas fa-user-edit"></i>
                    <span id="admindashboard">Dashboard</span>
                </li></a>
                <a href="/adminusers"> <li>
                    <i class="fas fa-th-list"></i>
                    <span id="adminusers">Users</span>
                </li>
            </a>
    
    
            <a href="/admindoctors"><li>
                <i class="fas fa-file-alt"></i>
                <span id="admindoctors">Doctors</span>
            </li>
        </a>
    
    
        
            <a href="/adminhospitals"><li>
                    <i class="fas fa-file-alt"></i>
                    <span id="adminhospitals">Hospitals</span>
                </li>
            </a>
                <a href="/settings"><li>
                    <i class="fas fa-user-cog"></i>
                    <span id="setting">Setting</span>
                </li>
            </a>
            </ul>
        </div>        <div class="myappointments">
            <div class="upcoming-appointments">
                <h2>Upcoming Appointments</h2>
                <%if(allappdata.length<=0){%>
                    <div>
                        <h3>No appointments available</h3>
                    </div>
                    <%}else{%>
                <%for(var i=0;i<allappdata.length;i++){%>
                    <form action="/admindeleteappointment/<%= allappdata[i]._id%>" method="POST">
    
                    <div class="appointment-div">
                        <div class="datetimehospital">
                            <div class="date">
                                <h3><%= allappdata[i].date%></h3>
                            </div>
                            <div class="timehospital">
                                <h3><span><%= allappdata[i].drname%></span></h3>
                                <h3><%= allappdata[i].day%><%= allappdata[i].time%></h3>
                                <h3><%= allappdata[i].drhospital%></h3>
                                <button>confirmed</button>
                            </div>
    
                        </div>
                        <div class="buttons">
                            <div onclick="window.location.href='/reschedule/<%= allappdata[i].drid%>/<%= allappdata[i]._id%>'" style="padding:0rem;">
                            <button type="button">Reschedule Appointment</button>
                        </div>
                            <button type="submit">Cancel Appointment</button>
                        </div>
                    </div>
                </form>
                    <%}}%>
                
                
            </div>
            <div class="completed-appointments">
                <h2>Completed Appointments</h2>
                <div>
                    <h3>No appointments available</h3>
                </div>
            </div>
    
        </div>
    
    </section>
    
    
    
    
    
    
    
    
    
    
    <%-include('footer.ejs') %>
    
    </body>
    
    </html>