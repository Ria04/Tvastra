        <style>
            #admindoctors{
                color:rgb(22, 125, 221);
                font-family: BoldFont;
            }
           
        </style>
          <script>
            function showdiv(id){
                const d=document.getElementById(id);
                
                if(d.style.display == "none"){
                    d.style.display="block";
                }
                else{
                 d.style.display="none"
                }
     
            }
        </script>
    </head>
    <body>
        
    
        <%-include('header.ejs') %>
    
    <section class="appointments">
        <div class="dashboard" >
            <h1>Dashboard</h1>
            <ul>
               <a href="/admindashboard"> <li>
                    <i class="fas fa-user-edit"></i>
                    <span id="admindashboard">Dashboard</span>
                </li></a>
                <a href="/adminusers"> <li>
                    <i class="fas fa-th-list"></i>
                    <span id="adminusers">Users</span>
                </li>
            </a>
    
    
            <a href="/admindoctors"><li>
                <i class="fas fa-file-alt"></i>
                <span id="admindoctors">Doctors</span>
            </li>
        </a>
    
    
        
            <a href="/adminhospitals"><li>
                    <i class="fas fa-file-alt"></i>
                    <span id="adminhospitals">Hospitals</span>
                </li>
            </a>
                <a href="/settings"><li>
                    <i class="fas fa-user-cog"></i>
                    <span id="setting">Setting</span>
                </li>
            </a>
            </ul>
        </div>
        <div class="record-flex usercarddata">
            <%for(var i=0;i<userdata.length;i++){%>
           <div class="usercard">
               <div class="userimage">
                <img src="<%= userdata[i].img%>" alt="">
                    <div onclick="showdiv('<%= i%>');" class="bar">
                        <i class="fas fa-bars"></i>
                    </div>
                    <div style="display:none;" id="<%= i%>" class="menu">
                        <ul>
                            <a href="/admineditprofileid/<%= userdata[i]._id%>/<%= userdata[i].isdoctor%>"> <li>Edit Profile</li></a>
                            <a href="/adminallappointments/<%= userdata[i]._id%>"><li>All booked Appointments</li></a>
                            <a href="/adminuserappointments/<%= userdata[i]._id%>"><li>Appointments</li></a>
                            <a href="/adminusermedicalrecords/<%= userdata[i]._id%>"><li>MEdical Reports</li></a>
                        </ul>
                    </div>
               </div>
               <div class="userinfo">
                <ul>
                    <li><h3><%= userdata[i].name%></h3></li>
                    <li><i class="fa fa-phone"></i><span><%= userdata[i].phone_number%></span></li>
                    <li><i class="fas fa-envelope"></i><span><%= userdata[i].email%></span></li>
                     <li><i class="fas fa-venus-mars"></i><span><%= userdata[i].gender%></span></li>
                    <li><i class="fas fa-calendar-week"></i><span><%= userdata[i].date%></span></li>
                    <li><i class="fas fa-map-marker-alt"></i><span><%= userdata[i].state%> <%= userdata[i].city%></span></li>                       
                </ul>
               </div>
           </div>
           <%}%>
        </div>
     

    
    </section>
 
    
    
    
    
    
    
    
    
    
