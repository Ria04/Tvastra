<script>
  $(function() {
    $(".inputs").keyup(function () {
        if (this.value.length == 1) {
          $(this).next('.inputs').focus();
        }
    });
});
</script>

<script>
  var resend = document.getElementById('resend');
  var timeLeft = 30;
  var timerId = setInterval(countdown, 1000);
  function countdown() {
      if (timeLeft == -1) {
        clearTimeout(timerId);
        resend.innerHTML="<a href='/otpnumberpage' style='text-decoration: none;'>Resend OTP</a>";
       
      } else {
        resend.innerHTML ='Resend in '+'<span>'+timeLeft+'</span>';
        timeLeft--;
      }
    }
</script>


