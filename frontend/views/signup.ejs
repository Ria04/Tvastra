        <nav class="desktop-nav">
            <figure>
                <img onclick="window.location.href='/home'"
                    src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg" />
            </figure>
            <ul>
                <a href="/doctor"><li>Doctor</li></a>
