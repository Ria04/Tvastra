
<html>
    <head>
        <link rel="stylesheet"  href="reset.css">
        <link rel="stylesheet" href="theme.css">
        <link rel="stylesheet" href="style.css">
        <link rel="stylesheet" href="isdoctor.css">

        <link rel="stylesheet" href="myappointments.css">
        <link rel="stylesheet" href="slotbooking.css">


          <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
       
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
    </head>
    <body>
        
    
        <%-include('header.ejs') %>
    
        <section class="slot-section">
            <div class="container slotbooking">
            <div class="inclinic">
            <h3>In Clinic Appointment</h1>
                <div class="icon">
                <i class="far fa-calendar-plus"></i>
                <p><%= schedule.days%>,<%= currentdate%></p>
                </div>
                <div class="icon">
                <i class="fa fa-clock-o"></i>
                <p><%= fromtime%></p>
                </div>
                <h4>Change date and time</h4>
                <div class="imgandinfodiv">
                    <div class="drimg">
                    <img src=<%= drdata.img%>>
                    </div>
                    <div class="drinfo">
                       <p> <%= drdata.name%></p>
                       <p> <%= drdata.yourhospital%></p>
                       <p> <%= drdata.treatments%></p>
                        <p><%= drdata.qualifications%></p>
                    </div>

                </div>
                <div class="hospitalandlogo">
                    <div class="logo">
                        <img src="https://cdn0.iconfinder.com/data/icons/health-icons-rounded/110/Hospital-512.png" alt="">
                    </div>
                    <div class="hospital">
                        <p><%= drdata.yourhospital%></p>
                    </div>

                </div>
            </div>
            <%if(booked!=true){%>
            <div class="patientdetails">
                <h2>Patient Details</h2>
                <form action="/bookappointment" method="POST">
                    <div class="appointmentfor">
                        <h3>This appointment is for</h3>
                        <div>
                            <input id="self" type="radio" name="patienttype" value="self">

                        <label for="self">Self</label>
                    </div>
                    <div>
                        <input id="someone" type="radio" name="patienttype" value="someone else">

                        <label for="someone">Someone else</label>

                    </div>
                    </div>
                    <div class="infoform">
                        <h3>Please provide the following information</h3>
                        <h4>Patients Full Name</h4>
                        <input type="text" value="<%= username%>" readonly>
                        <h4>Mobile No</h4>
                        <input type="text" value="<%= phonenumber%>" readonly>
                        <h4>Patients Mobileno</h4>
                        <input type="text" value="<%= phonenumber%>" readonly>
                        <h4>Patients Email</h4>
                        <input type="text" value="<%= email%>" readonly>
                        <button class="sky-blue-button" type="submit">Book Appointment</button>
                        <input style="display: none;" type="text" name="drname" value="<%= drdata.name%>">
                        <input style="display: none;" type="text" name="drhospital" value="<%= drdata.yourhospital%>">
                        <input style="display: none;" type="text" name="drid" value="<%= drdata._id%>">


                        <input style="display: none;" type="text" name="currenttime" value="<%= fromtime%>">
                        <input style="display: none;" type="text" name="scheduleday" value="<%= schedule.days%>">
                        <input style="display: none;" type="text" name="scheduledate" value="<%= currentdate%>" >
                    </div>



                </form>


            </div>
            <%}else{%>
                <form class="rescheduleform" >
                <div>
                    <i class="fas fa-check-circle"></i>
                    <h3>Appointment Confirmed</h3>
                </div>
                <h3>We have sent you sms with details</h3>
                <h3 id="d">Patient Name</h3>
                <p><%= appointmentdata.username%></p>
                <h3 id="d">Mobile number</h3>
                <p><%= appointmentdata.number%></p>
                <div class="buttondiv">
                    <button class="sky-blue-button">Cancel Appointment</button>
                  
                    <button class="sky-blue-button">Reschedule Appointment</button>
            
                </div>
                </form>
                <%}%>

            </div>
        </section>
   
    
    
    
    
    
    
    
    
    
    <%-include('footer.ejs') %>
    
    </body>
    
    </html>
