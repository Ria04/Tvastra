        <div class="radiodiv">
        <input type="radio" id="routine">
        <label for="routine">Routine Check-up</label>
        </div>
        <div class="radiodiv">
        <input type="radio" id="nonurgent">
        <label for="nonurgent">Non Urgent Check-up</label>
        </div> 
        <div class="radiodiv">
        <input type="radio" id="urgent" >
        <label for="urgent">urgent Check-up</label>
        </div>
        <div class="radiodiv">
        <input type="radio" id="surgical" >
        <label for="surgical">Surgical Check-up</label>
        </div>

        <label id="mainlabel" >Upload Previous Health Record*</label>
        <input type="file" id="myFile" name="filename">


