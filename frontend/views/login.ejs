<section class="bg-blue-section signin-section">
    <% if (msg1.length>0) {%>
        <div id="loginmsg">
        <i id="tick"class="fa fa-close"></i>
        <ul>
            <li><span><%= msg1[0]%></span></li>
            <li><%= msg1[1]%></li>
        </ul>
        </div>
        <%}%>
        
    <section>
        <article>
            <h1>Login</h1>
        </article>
        <form method="POST" action="/">
            <input type="text" placeholder="Enter Email" name="email" required>
            <div class="password-div">
                <input id="password" type="password" placeholder="Enter Password" name="password" required>
                <i id="toggle" class="fa fa-eye-slash" onclick="changeicon()"></i>
            </div>
            <div class="button-div">
                <button type="button" onclick='window.location.href="/otpnumberpage"' class="linkButton">Login with
                    OTP</button>
                <button type="button" onclick='this.form.action="/getemail";' class="linkButton">Forgot
                    Password</button>
            </div>
            <button class="filledButton">l o g i n <i class="fa fa-arrow-right"></i></button>
        </form>
        <h6>not registered? <span><a href="/signup">SignUp</a></span></h6>


    </section>
    <footer>
        <p> All Rights Reserved. <i class="fa fa-copyright"></i> tvastra 2020</p>
    </footer>
</section>








</body>
