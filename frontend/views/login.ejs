</section>
<script>

 var passwordtext= document.getElementById("pass");  
 function changeicon(){
    var x = document.getElementById("pass");
    var y= document.getElementById("toggle")
  if (x.type === "password") {
    x.type = "text";
    y.className='fa fa-eye';
  } else {
    x.type = "password";
    y.className='fa fa-eye-slash';
  }
}
   
    

</script>


